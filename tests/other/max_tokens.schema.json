{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "root",
  "description": "Some demo structure for demoing.",
  "type": "object",
  "required": [ "things", "is_good" ],
  "additionalProperties": false,
  "properties": {
     "things": {
        "type": "array",
        "maxItems": 3,
        "items": {
          "type": "object",
          "required": [ "name", "coordinate" ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the vegetable.",
              "maxLength": 8
            },
            "coordinate": {
              "type": "integer",
              "minimum": 0
            }
         }
       }
    },
    "is_good": {
      "type": "boolean",
      "description": "Is the thing any good?"
    }
  }
}
