{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "root",
  "description": "Some demo structure for demoing.",
  "type": "object",
  "additionalProperties": false,
  "required": ["the_array"],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 8,
      "default":""
    },
    "is_good": {
      "type": "boolean",
      "default": false
    },
    "num": {
      "type": "integer",
      "default": 1337
    },
    "the_array": {
      "type": "array",
      "maxItems": 3,
      "items": {
          "type": "integer"
      }
    }
  }
}
